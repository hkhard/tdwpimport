{
  "name": "@tdwp/tournament-controller",
  "version": "1.0.0",
  "description": "Central controller for Tournament Director Platform - authoritative timekeeping and data coordination",
  "main": "dist/index.js",
  "scripts": {
    "dev": "tsx watch src/index.ts",
    "build": "tsc && tsc-alias && npm run copy-migrations",
    "copy-migrations": "mkdir -p dist/controller/src/db/migrations && cp src/db/migrations/*.sql dist/controller/src/db/migrations/",
    "start": "node dist/controller/src/index.js",
    "lint": "eslint src --ext .ts",
    "lint:fix": "eslint src --ext .ts --fix",
    "format": "prettier --write \"src/**/*.ts\"",
    "test": "jest",
    "test:remote-view": "node scripts/test-remote-view.js"
  },
  "keywords": [
    "tournament",
    "controller",
    "websocket"
  ],
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "@types/bcrypt": "^5.0.0",
    "@types/better-sqlite3": "^7.6.13",
    "@types/cors": "^2.8.0",
    "@types/jest": "^29.5.0",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/node": "^20.0.0",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "eslint": "^8.50.0",
    "jest": "^29.5.0",
    "pino-pretty": "^10.0.0",
    "prettier": "^3.0.0",
    "tsc-alias": "^1.8.16",
    "tsx": "^4.0.0",
    "typescript": "^5.0.0"
  },
  "dependencies": {
    "@fastify/cors": "^11.2.0",
    "@fastify/static": "^9.0.0",
    "@fastify/websocket": "^11.2.0",
    "bcrypt": "^5.1.0",
    "better-sqlite3": "^9.2.0",
    "fastify": "^5.6.2",
    "jsonwebtoken": "^9.0.0",
    "nanoid": "^5.1.6",
    "zod": "^3.22.0",
    "zod-validation-error": "^3.0.0"
  }
}
